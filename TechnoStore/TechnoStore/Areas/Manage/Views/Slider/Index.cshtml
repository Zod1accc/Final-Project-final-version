@model List<Slider>
@{
    int count = 0;
}

<div class="d-flex justify-content-between container-fluid">
    <h3>Cteate Slider</h3>
    <div class="col-auto">
        <a asp-action="create" asp-controller="slider" class="btn btn-soft-success"><i class="ri-add-circle-line align-middle me-1"></i> Add Product</a>
    </div>
</div>
<hr />

<!-- Tables Without Borders -->
<table class="table table-borderless table-nowrap">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name1</th>
            <th scope="col">Name2</th>
            <th scope="col">Date</th>
            <th scope="col">Image</th>
            <th scope="col">RedirectUrl</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;

            <tr>
                <th scope="row">@count</th>
                <td>@item.Name1</td>
                <td>@item.Name2</td>
                <td>
                    @if(item.LastUpdate == null)
                    {
                        @item.CreatedTime;
                    }
                    else
                    {
                        @item.LastUpdate;
                    }
                </td>
                <td>
                    <img src="~/uploads/sliders/@item.Image" style="width:100px" />
                </td>
                <td><span class="badge badge-soft-success">@item.RedirectUrl</span></td>
                <td>
                    <div class="hstack gap-3 fs-15">
                        <a asp-action="update" asp-controller="slider" asp-route-id="@item.Id" class="link-primary"><i class="ri-settings-4-line"></i></a>
                        <a asp-action="delete" asp-controller="slider" asp-route-id="@item.Id" class="link-danger delete-item-btn"><i class="ri-delete-bin-5-line"></i></a>
                    </div>
                </td>
            </tr>
        }
        
        
    </tbody>
</table>