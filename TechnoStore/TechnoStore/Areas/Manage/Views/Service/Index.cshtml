@model List<Service>
@{
    int count = 0;
}

<div class="d-flex justify-content-between container-fluid">
    <h3>Cteate Service</h3>
    <div class="col-auto">
        <a asp-action="create" asp-controller="service" class="btn btn-soft-success"><i class="ri-add-circle-line align-middle me-1"></i> Add Service</a>
    </div>
</div>
<hr />

<!-- Tables Without Borders -->
<table class="table table-borderless table-nowrap">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Image</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;

            <tr>
                <th scope="row">@count</th>
                <td>@item.Title</td>

                <td>
                    <img src="~/uploads/services/@item?.Image" style="width:44px" />
                </td>
                
                <td>
                    <div class="hstack gap-3 fs-15">
                        <a asp-action="update" asp-controller="service" asp-route-id="@item.Id" class="link-primary"><i class="ri-settings-4-line"></i></a>
                        <a asp-action="delete" asp-controller="service" asp-route-id="@item.Id" class="link-danger delete-item-btn"><i class="ri-delete-bin-5-line"></i></a>
                    </div>
                </td>
            </tr>
        }


    </tbody>
</table>
