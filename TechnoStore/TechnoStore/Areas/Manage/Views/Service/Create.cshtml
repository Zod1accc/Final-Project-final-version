@model ServiceViewModel

<div class="d-flex justify-content-between container-fluid">
	<h3>Cteate Service</h3>

</div>

<div class="cotainer-fluid ">
	<form method="post" asp-action="create" enctype="multipart/form-data">

		<div class="row mt-3">

			<div class="form-floating col-md-4">
				<input asp-for="Title" class="form-control" placeholder="Title">
				<label asp-for="Title">Title</label>
				<span asp-validation-for="Title"></span>
			</div>
			<div class="col-md-4">
				@*<label asp-for="Description" class="form-label"></label>*@
				<textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
				<span asp-validation-for="Description"></span>

			</div>

		</div>
		<div style="width:200px" class="mt-3">
			<label asp-for="ImageFile" class="form-label"> Image</label>
			<input asp-for="ImageFile" class="form-control">
			<span asp-validation-for="ImageFile"></span>
		</div>
		<button class="btn btn-outline-info btn-block mt-3" type="submit">Submit</button>
	</form>


</div>
