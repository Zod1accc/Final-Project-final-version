@model HomePageBannerVM

<div class="d-flex justify-content-between container-fluid">
	<h3>Cteate Banner</h3>

</div>

<div class="cotainer-fluid ">
	<form method="post" asp-action="create" enctype="multipart/form-data">
		
		<div class="row mt-3">
			
			<div class="form-floating col-md-4">
				<input asp-for="Url" class="form-control" placeholder="Url">
				<label asp-for="Url">RedirectUrl</label>
				<span asp-validation-for="Url"></span>
			</div>
			
		</div>
		<div class="row mt-3">

			<div class="form-floating col-md-4">
				<input asp-for="Name" class="form-control" placeholder="Name">
				<label asp-for="Name">Name</label>
				<span asp-validation-for="Name"></span>
			</div>

		</div>
		<div style="width:200px">
			<label asp-for="ImageFile" class="form-label">Banner Image</label>
			<input asp-for="ImageFile" class="form-control">
			<span asp-validation-for="ImageFile"></span>
		</div>
		<button class="btn btn-outline-info btn-block mt-3" type="submit">Submit</button>
	</form>


</div>