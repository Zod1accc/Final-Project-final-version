							<img src="~/assets/images/icons/car.png" alt="">
						</div>
						<div class="box-title">
							<h3>Worldwide Shipping</h3>
						</div>
						<div class="clearfix"></div>
					</div><!-- /.box-header -->
				</div><!-- /.iconbox -->
			</div><!-- /.col-md-6 col-lg-3 -->
			<div class="col-md-6 col-lg-3">
				<div class="iconbox style1 v1">
					<div class="box-header">
						<div class="image">
							<img src="~/assets/images/icons/order.png" alt="">
						</div>
						<div class="box-title">
							<h3>Order Online Service</h3>
						</div>
						<div class="clearfix"></div>
					</div><!-- /.box-header -->
				</div><!-- /.iconbox -->
			</div><!-- /.col-md-6 col-lg-3 -->
			<div class="col-md-6 col-lg-3">
				<div class="iconbox style1 v1">
					<div class="box-header">
						<div class="image">
							<img src="~/assets/images/icons/payment.png" alt="">
						</div>
						<div class="box-title">
							<h3>Payment</h3>
						</div>
						<div class="clearfix"></div>
					</div><!-- /.box-header -->
				</div><!-- /.iconbox -->
			</div><!-- /.col-md-6 col-lg-3 -->
			<div class="col-md-6 col-lg-3">
				<div class="iconbox style1 v1">
					<div class="box-header">
						<div class="image">
							<img src="~/assets/images/icons/return.png" alt="">
						</div>
						<div class="box-title">
							<h3>Return 30 Days</h3>
						</div>
						<div class="clearfix"></div>
					</div><!-- /.box-header -->
				</div><!-- /.iconbox -->
			</div><!-- /.col-md-6 col-lg-3 -->
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.flat-iconbox -->
