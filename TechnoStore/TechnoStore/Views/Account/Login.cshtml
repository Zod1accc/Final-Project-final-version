<section class="flat-account background">
	<div class="container">
		<div class="row">

			<div class="col-md-12">
				<div class="form-login">
					<div class="title">
						<h3>Login	</h3>
					</div>
					<form asp-action="login" method="post" id="form-login" accept-charset="utf-8">
						<div class="form-box ">
							<label asp-for="Username">Username </label>
							<input asp-for="Username" placeholder="Username">
							<span asp-validation-for="Username" class="text-danger"></span>
						</div><!-- /.form-box -->
						<div class="form-box ">
							<label asp-for="Password">Password</label>
							<input asp-for="Password" placeholder="Password">
							<span asp-validation-for="Password" class="text-danger"></span>
						</div><!-- /.form-box -->
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-box checkbox">
							<input type="checkbox" id="remember" checked name="remember">
							<label for="remember">Remember me</label>
						</div><!-- /.form-box -->
						<div class="form-box">
							<button type="submit" class="login">Login</button>
							<a asp-action="forgotpassword" asp-controller="account" title="">Lost your password?</a>
						</div><!-- /.form-box -->
					</form><!-- /#form-login -->
				</div><!-- /.form-register -->
			</div><!-- /.col-md-6 -->
		</div><!-- /.row -->
	</div><!-- /.container -->
</section><!-- /.flat-account -->

