@model List<HomePageBanner>
@{
    int count = 0;
}

<div class="d-flex justify-content-between container-fluid">
    <h3>Banners</h3>
    <div class="col-auto">
        @*<a asp-action="create" asp-controller="banner" class="btn btn-soft-success"><i class="ri-add-circle-line align-middle me-1"></i> Add Banner</a>*@
    </div>
</div>

<!-- Tables Without Borders -->
<table class="table table-borderless table-nowrap mt-3">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">RedirectUrl</th>
            <th scope="col">Image</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;

            <tr>
                <th scope="row">@count</th>
                <td>@item.Name</td>
                <td>@item.Url</td>
                
                <td>
                    <img src="~/uploads/banners/@item?.Image" style="width:100px" />
                </td>
                @*<td><span class="badge badge-soft-success">@item.RedirectUrl</span></td>*@
                <td>
                    <div class="hstack gap-3 fs-15">
                        <a asp-action="update" asp-controller="banner" asp-route-id="@item.Id" class="link-primary"><i class="ri-settings-4-line"></i></a>
                        @*<a asp-action="delete" asp-controller="banner" asp-route-id="@item.Id" class="link-danger"><i class="ri-delete-bin-5-line"></i></a>*@
                    </div>
                </td>
            </tr>
        }


    </tbody>
</table>
