@model ContactServicesViewModel

<div class="d-flex justify-content-between container-fluid">
	<h3>Cteate Service</h3>

</div>
<form method="post" asp-action="update" enctype="multipart/form-data">
	<div class="row mt-3">
		<div style="width:200px" class="vol-md-3">
			<label asp-for="Title" class="form-label">Title</label>
			<input asp-for="Title" class="form-control">
			<span asp-validation-for="Title"></span>
		</div>
		<div class="col-md-4 mt-3">

			<textarea asp-for="Content" class="form-control" placeholder="Content"></textarea>
			<span asp-validation-for="Content"></span>
		</div>

	</div>
	<div class="row mt-3">
		<div class="col-md-4">
			<label asp-for="Icon" class="form-label"> Icon</label>
			<input asp-for="Icon" class="form-control">
			<span asp-validation-for="Icon"></span>
			<img class="mt-3" style="width:33px;margin-left: 5px;" src="~/uploads/contactservices/@Model?.IconStr" />
		</div>

	</div>
	<div asp-validation-summary="ModelOnly"></div>

	<button class="btn btn-outline-info btn-block mt-3" type="submit">Submit</button>
</form>
